<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/favicon.png">
    <title>LocalStorage Cart</title>

    <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>
<body>

    <div class="checkout-btn-wrapper">
        <span class="checkout-btn">Checkout Now</span>
    </div>
    
    <div class="products">
        <% products.forEach((product) => { %>
        <div class="product" data-id="<%= product._id %>">
            <h2 class="title"><%= product.title %></h2>
            <p class="price"><strong>Rs.<%= product.price %></strong></p>
            <small class="color"><%= product.color %></small>
            <p class="description"><%= product.description %></p>

            <div class="action-btns for-<%= product._id %>">
                <span
                    class="add-to-cart" 
                    data-id="<%= product._id %>" 
                    data-title="<%= product.title %>" 
                    data-price="<%= product.price %>" 
                    data-color="<%= product.color %>"
                    data-description="<%= product.description %>">
                    Add to Cart
                </span>

                <% if(cartSession && cartSession.items[product._id]){ %>
                <span class="remove-from-cart for-<%= product._id %>" data-id="<%= product._id %>">Remove From Cart</span>
                <% } %>
            </div>

            <div class="qty-changers">
                <span data-id="<%= product._id %>" class="decrease-qty for-<%= product._id %>"> - </span>
                <% if(cartSession && cartSession.items[product._id]){ %>
                <span class="product-qty for-<%= product._id %>"><span><%= cartSession.items[product._id].qty %></span> pieces </span>
                <% } else { %>
                <span class="product-qty for-<%= product._id %>"><span>0</span> pieces </span>
                <% } %>
                <span
                 class="increase-qty for-<%= product._id %>"
                 data-id="<%= product._id %>" 
                 data-title="<%= product.title %>" 
                 data-price="<%= product.price %>" 
                 data-color="<%= product.color %>"
                 data-description="<%= product.description %>">+
                </span>
            </div>
        </div>
        <% }); %>
    </div>

    <script src="/scripts/common-bundle.js"></script>
</body>
</html>